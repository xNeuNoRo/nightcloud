{
  "name": "homecloud-backend",
  "version": "1.0.0",
  "description": "Local cloud storage platform",
  "main": "src/server.ts",
  "scripts": {
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "prepare-husky": "git init && bunx husky-init && bun install && bunx husky add .husky/pre-commit \"bun lint-staged\"",
    "check": "bun build.mjs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "typecheck": "tsc --noEmit",
    "build": "tsc --noEmit false",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist",
    "build:start": "node dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:coverage": "bun run pretest && jest --detectOpenHandles --coverage && bun run posttest",
    "pretest": "echo Iniciando pruebas",
    "posttest": "echo Pruebas finalizadas.",
    "prepare": "if [ \"$NODE_ENV\" = \"development\" ]; then husky install; fi",
    "jest:init": "bunx ts-jest config:init"
  },
  "keywords": [],
  "authors": [
    "Ángel González <angelgonzalez280304@gmail.com> GitHub: xNeuNoRo",
    "Lorelvis Santos <santoslorelvis@gmail.com> GitHub: lorelvis-santos"
  ],
  "license": "MIT",
  "packageManager": "bun@1.3.4",
  "files": [
    "src/",
    "build.mjs",
    "eslint.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "tsconfig.json"
  ],
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "fs": "0.0.1-security",
    "husky": "^8.0.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prisma": "^7.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "pg": "^8.16.3"
  }
}
